---
/**
 * Props:
 *  - name  → first name to highlight (default: "")
 *  - role  → one-line description (default: "")
 *  - ctaId → id of the section you want to scroll to (default: "work")
 */
interface Props { name?: string; role?: string; ctaId?: string }
const { name = "Nathan", role = "a Software Developer", ctaId = "work" } =
  Astro.props;
import Icon from "./Icon.astro";
---

<section class="hero">
  <div class="inner">
    <h1 class="headline">
      Hello,&nbsp;I'm&nbsp;<span class="accent">{name}</span>.
    </h1>
    <p class="sub">{role}.</p>

    <a href={`#${ctaId}`} class="hero-cta">
      View&nbsp;my&nbsp;work <Icon icon="arrow-down" size="1.1em" />
    </a>
  </div>
</section>

<style>
/* Layout */
.hero {
  min-height: 100vh;
  display: flex;
  align-items: center;
  justify-content: center;
  text-align: center;
  padding-inline: 1.5rem;
  font-family: var(--font-brand);
}

.inner {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: .75rem;
}

/* Typography */
.headline {
  font-size: clamp(2.5rem, 5vw + 1rem, 4rem);
  font-weight: 500;
  color: var(--gray-0);
  opacity: 0;
  transform: translateY(24px);
  animation: fadeSlide .8s .15s forwards;
  margin: 0;
}
.accent { color: var(--accent-regular); }

.sub {
  font-size: clamp(1.25rem, 1.5vw + .5rem, 2rem);
  color: var(--gray-100);
  opacity: 0;
  transform: translateY(24px);
  animation: fadeSlide .8s .3s forwards;
  margin: 0;
}

/* CTA button */
.hero-cta{
  margin-top: 1.5rem;
  display:inline-flex;
  align-items:center;
  gap:.6rem;
  padding:.9rem 1.75rem;
  font-size: var(--text-lg);
  border:2px solid var(--accent-regular);
  border-radius:.5rem;
  color: var(--accent-regular);
  transition: background .25s, color .25s, box-shadow .25s;
  opacity:0; transform:translateY(24px);
  animation: fadeSlide .8s .45s forwards;
}

.hero-cta:hover,
.hero-cta:focus{
  background: var(--accent-regular);
  color: var(--accent-text-over);
  box-shadow: 0 0 0 4px var(--accent-overlay);
}

/* Entrance keyframes */
@keyframes fadeSlide{
  to{opacity:1;transform:none;}
}
</style>
