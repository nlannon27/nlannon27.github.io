---
/**  variant = "hero" | "site"  **/
const { variant = "site" } = Astro.props;
const id      = variant === "hero" ? "hero-bg"  : "site-bg";
const classes = variant === "hero" ? "bg-canvas hero-bg" : "bg-canvas site-bg";
---

<canvas id={id} class={classes} aria-hidden="true"></canvas>

<style>
  .bg-canvas {
    width: 100%;
    height: 100%;
    position: absolute;
    inset: 0;
    z-index: -1;
    pointer-events: none;
  }

  .hero-bg { }

  .site-bg {
    position: fixed;
    top: 0;
  }
</style>